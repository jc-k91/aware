<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/landing.css">
</head>
<body>
    <div class="container">
        <div class="app-name-container">
            <a href="/"><img src="/assets/logos/logo-dark.svg" alt="Aware logo"></a>
        </div>
        <div class="content-container">
            <div class="page-title-container">
                <h3>Sign In</h3>
            </div>
            <div class="hero-image-container image-small">
                <img class="hero-image" src="/assets/hero/hero-2.svg" alt="Hero image">
            </div>
            <div class="form-container">
                <form action="/session" method="POST">
                    <!-- username -->
                    <fieldset>
                            <input class="input-textbox u-full-width" type="text" name="username" placeholder="Username">
                    </fieldset>
                    <!-- password -->
                    <fieldset class="form-last">
                            <input class="input-textbox u-full-width" type="password" name="password" placeholder="Password">
                    </fieldset>
                    <!-- sign in button -->
                    <div class="button-container">
                        <input class="button button-primary u-full-width" type="submit" value="Sign In">
                        <a class="button u-full-width" href="/users/new">Create Account</a>
                        <a class="button u-full-width" href="/">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
